<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res/cn.ifanmi.findme">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/img_find_center_top">
        <cn.ifanmi.findme.ui.view.CircleImageView
	        android:id="@+id/img_find_center_photo"
		    android:layout_width="150dp"
		    android:layout_height="150dp"
		    android:layout_centerInParent="true"
		    android:scaleType="fitXY"
		    app:border_width="1dp"
		    app:border_color="@color/white"
		    android:contentDescription="@string/hello_world"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="@color/text_gray_bg">
            <ImageView 
	            android:id="@+id/img_find_center_auth"
	            android:layout_width="15dp"
	            android:layout_height="15dp"
	            android:layout_centerVertical="true"
	            android:layout_toLeftOf="@+id/img_find_center_sex"
	            android:layout_marginRight="10dp"
	            android:src="@drawable/img_auth_yes"
	            android:contentDescription="@string/hello_world"
	            android:visibility="gone"/>
            <ImageView 
	            android:id="@id/img_find_center_sex"
	            android:layout_width="15dp"
	            android:layout_height="15dp"
	            android:layout_centerVertical="true"
	            android:layout_toLeftOf="@+id/txt_find_center_nickname"
	            android:contentDescription="@string/hello_world"/>
            <TextView 
	            android:id="@id/txt_find_center_nickname"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:textSize="18sp"
	            android:textColor="@color/white"/>
            <TextView 
	            android:id="@+id/txt_find_center_cl"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@id/txt_find_center_nickname"
	            android:layout_toRightOf="@id/txt_find_center_nickname"
	            android:textSize="14sp"
	            android:textColor="@color/white"
	            android:gravity="bottom"
	            android:paddingBottom="1dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView 
        android:id="@+id/txt_find_center_college"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>
    <include layout="@layout/divider_gray"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
	        android:id="@+id/txt_find_center_dept"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="3"
	        android:textSize="16sp"
	        android:textColor="@color/black"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:paddingTop="12dp"
	        android:paddingBottom="12dp"/>
        <TextView 
	        android:id="@+id/txt_find_center_grade"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="16sp"
	        android:textColor="@color/black"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:paddingTop="12dp"
	        android:paddingBottom="12dp"
	        android:gravity="right"/>
    </LinearLayout>
    <TextView 
        android:id="@+id/txt_find_center_signature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/white_divider"/>
</LinearLayout>
