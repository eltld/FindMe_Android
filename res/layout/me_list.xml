<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/list_item_bg_c">
    <ImageView 
        android:id="@+id/img_me_list"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true"
    	android:contentDescription="@string/hello_world"/>
    <TextView 
        android:id="@+id/txt_me_list"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:layout_toRightOf="@id/img_me_list"
    	android:layout_toLeftOf="@+id/img_me_list_auth"
    	android:layout_marginLeft="10dp"
    	android:layout_marginRight="10dp"
    	android:textSize="17sp"
    	android:textColor="@color/black"/>
    <ImageView 
        android:id="@id/img_me_list_auth"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/img_me_list_select"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/hello_world"/>
    <ImageView 
        android:id="@id/img_me_list_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
    	android:src="@drawable/img_select"
    	android:contentDescription="@string/hello_world"/>
</RelativeLayout>
