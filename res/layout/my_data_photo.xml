<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/bar" 
    xmlns:app="http://schemas.android.com/apk/res/cn.ifanmi.findme">
    <cn.ifanmi.findme.ui.view.CircleImageView
        android:id="@+id/img_my_data_photo"
	    android:layout_width="100dp"
	    android:layout_height="100dp"
	    android:scaleType="fitXY"
	    app:border_width="1dp"
	    app:border_color="@color/white"
	    android:contentDescription="@string/hello_world"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView 
	        android:id="@+id/img_my_data_auth"
	        android:layout_width="15dp"
	        android:layout_height="15dp"
	        android:layout_centerVertical="true"
	        android:layout_toLeftOf="@+id/img_my_data_sex"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/img_auth_yes"
	        android:contentDescription="@string/hello_world"
	        android:visibility="visible"/>
        <ImageView 
	        android:id="@id/img_my_data_sex"
	        android:layout_width="15dp"
	        android:layout_height="15dp"
	        android:layout_centerVertical="true"
	        android:layout_toLeftOf="@+id/txt_my_data_name"
	        android:src="@drawable/sex_male"
	        android:contentDescription="@string/hello_world"/>
        <TextView 
	        android:id="@id/txt_my_data_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:text="@string/hello_world"
	        android:textSize="18sp"
	        android:textColor="@color/white"/>
        <TextView 
	        android:id="@+id/txt_my_data_cl"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@id/txt_my_data_name"
	        android:layout_toRightOf="@id/txt_my_data_name"
	        android:text="@string/hello_world"
	        android:textSize="14sp"
	        android:textColor="@color/white"
	        android:paddingBottom="1dp"/>
    </RelativeLayout>
</LinearLayout>
