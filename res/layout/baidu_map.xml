<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >
    <RelativeLayout 
	    android:layout_width="match_parent"
		android:layout_height="@dimen/actionbar_height"
		android:background="@drawable/actionbar_bg">
		<Button 
		    android:id="@+id/btn_back_baidu_map"
		    style="@style/bar_back"/>
		<TextView 
		    android:text="@string/location_message"
	    	style="@style/bar_text"/>
		<Button 
		    android:id="@+id/btn_send_baidu_map"
		    style="@style/bar_right_text_full"
		    android:text="@string/send"/>
	</RelativeLayout>
    
    <com.baidu.mapapi.map.MapView android:id="@+id/bmapView"
	    android:layout_width="fill_parent" android:layout_height="fill_parent" 
	    android:clickable="true"
	    android:background="#fff"
	/>
    
</LinearLayout>