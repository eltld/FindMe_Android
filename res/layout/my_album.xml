<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg">
    <RelativeLayout 
	    android:layout_width="match_parent"
		android:layout_height="@dimen/actionbar_height"
		android:background="@drawable/actionbar_bg">
		<Button 
		    android:id="@+id/btn_back_my_album"
		    style="@style/bar_back"/>
		<TextView 
	    	android:text="@string/album"
	    	style="@style/bar_text"/>
		<Button 
		    android:id="@+id/btn_add_my_album"
		    android:text="@string/add"
		    style="@style/bar_right_text_full"
		    android:visibility="gone"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    <cn.ifanmi.findme.ui.view.SuperScrollView 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent">
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:background="@null">
		        <LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="vertical"
				    android:layout_margin="10dp"
				    android:background="@color/white">
				    <cn.ifanmi.findme.ui.view.MyGridView 
					    android:id="@+id/mgrid_my_album"
					    android:layout_width="320dp"
					    android:layout_height="wrap_content"
					    android:layout_margin="10dp"
					    android:layout_gravity="center_horizontal"
					    android:horizontalSpacing="10dp"    
					    android:verticalSpacing="10dp"    
					    android:numColumns="3"
					    android:scrollbars="none"
					    android:listSelector="@drawable/no_selector"
					    android:visibility="gone"/>
				</LinearLayout>
		    </LinearLayout>
		</cn.ifanmi.findme.ui.view.SuperScrollView>
		<TextView 
	        android:id="@+id/txt_my_album_no_picture"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:gravity="center_horizontal"
	        android:text="@string/my_album_no_picture"
	        android:textColor="@color/no_info"
	        android:textSize="18sp"
	        android:drawableTop="@drawable/img_no_picture"
	        android:drawablePadding="10dp"
	        android:visibility="gone"/>
	</RelativeLayout>
</LinearLayout>
