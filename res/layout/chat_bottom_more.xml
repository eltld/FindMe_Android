<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_cbm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cbm_bg"
    android:orientation="vertical"
    android:visibility="gone" >
    <include layout="@layout/divider_gray"/>
    <!-- 表情图片 -->
    <LinearLayout 
        android:id="@+id/layout_cbm_exp"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:visibility="gone">
        <GridView 
	        android:id="@+id/grid_cbm_exp"
	        android:layout_width="match_parent" 
			android:layout_height="200dp"
			android:numColumns="7"
			android:gravity="center"
			android:listSelector="@color/transparent"
			android:background="@color/white">
    	</GridView>
    	<include layout="@layout/divider_gray"/>
    	<RelativeLayout 
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content">  
    	    <ImageView 
    	        android:id="@+id/img_cbm_exp_delete"
			    android:layout_width="60dp"
			    android:layout_height="45dp"
			    android:padding="8dp"
			    android:layout_alignParentRight="true"
			    android:src="@drawable/delete"
			    android:clickable="true"
			    android:background="@drawable/delete_bg"
			    android:contentDescription="@string/hello_world"/>
    	    <TextView 
	    	    android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_alignParentLeft="true"
    	        android:layout_toLeftOf="@id/img_cbm_exp_delete"
    	        android:layout_centerInParent="true"
    	        android:gravity="center"
		    	android:text="@string/default_exp"
		    	android:textColor="@color/black"
		    	android:textSize="16sp"/>
    	</RelativeLayout>
    </LinearLayout>

    <!-- 图片，表情，名片等按钮 -->
    <LinearLayout
        android:id="@+id/layout_cbm_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="6dp"
            android:weightSum="4" 
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageView
                    android:id="@+id/img_cbm_photo"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/btn_cbm_photo_bg"
                    android:clickable="true"
                    android:scaleType="fitCenter" 
                    android:contentDescription="@string/hello_world"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/take_photos"
                    android:textColor="@color/cbm_text" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageView
                    android:id="@+id/img_cbm_picture"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/btn_cbm_picture_bg"
                    android:clickable="true"
                    android:scaleType="fitCenter" 
                    android:contentDescription="@string/hello_world"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/picture"
                    android:textColor="@color/cbm_text" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageView
                    android:id="@+id/img_cbm_location"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_cbm_location_bg" 
                    android:contentDescription="@string/hello_world"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/location"
                    android:textColor="@color/cbm_text" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_cbm_video"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/btn_cbm_video_bg"
                    android:clickable="true"
                    android:scaleType="fitCenter" 
                    android:contentDescription="@string/hello_world"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/video"
                    android:textColor="@color/cbm_text" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="6dp"
            android:weightSum="4" 
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_cbm_file"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/btn_cbm_file_bg"
                    android:clickable="true"
                    android:scaleType="fitCenter" 
                    android:contentDescription="@string/hello_world"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/file"
                    android:textColor="@color/cbm_text" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone" >
                <ImageView
                    android:id="@+id/img_cbm_other"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/btn_cbm_file_bg"
                    android:clickable="true"
                    android:scaleType="fitCenter" 
                    android:contentDescription="@string/hello_world"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/file"
                    android:textColor="@color/cbm_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
