<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg">
    <RelativeLayout 
	    android:layout_width="match_parent"
		android:layout_height="@dimen/actionbar_height"
		android:background="@drawable/actionbar_bg">
		<TextView 
	    	android:text="@string/complete_ud"
	    	style="@style/bar_text"/>
		<Button 
		    android:id="@+id/btn_ok_complete_ud"
		    style="@style/bar_right_complete"/>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp">
	    <include layout="@layout/complete_ud_photo"/>
	    <include layout="@layout/complete_ud_name"/>
	    <include layout="@layout/complete_ud_sex"/>
	    <include layout="@layout/complete_ud_cl"/>
	</LinearLayout>
</LinearLayout>
