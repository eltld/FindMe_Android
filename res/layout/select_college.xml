<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg">
    <RelativeLayout 
	    android:layout_width="match_parent"
		android:layout_height="@dimen/actionbar_height"
		android:background="@drawable/actionbar_bg">
		<TextView 
	    	android:text="@string/select_college"
	    	style="@style/bar_text"/>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp">
	        <EditText 
	            android:id="@+id/edit_select_college"
		        android:layout_width="match_parent"
		    	android:layout_height="38dp"
		    	android:paddingLeft="10dp"
		    	android:drawablePadding="10dp"
		    	android:background="@drawable/edit_gray_47"
				android:drawableLeft="@drawable/img_search"
		    	android:hint="@string/input_college"
		    	android:textColorHint="@color/gray"
		    	android:textSize="16sp"
		    	android:textColor="@color/black"
		    	android:singleLine="true"/>
	    </LinearLayout>
	    <ListView 
	        android:id="@+id/list_select_college"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp"
	        android:divider="@color/white_divider"
    		android:dividerHeight="1dp"
    		android:cacheColorHint="#00000000"
	        android:background="@drawable/layout_bg_ss"/>
    </LinearLayout>
</LinearLayout>