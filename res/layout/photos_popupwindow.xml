<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/photos_popupwindow_bg" >
    <LinearLayout
        android:id="@+id/layout_photos_popupwindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ff495a" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/btn_photos_popupwindow_camera"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/btn_photos_complete"
                android:textColor="#585858"
                android:textSize="18sp"
                android:text="@string/take_photos" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f2f2f2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/btn_photos_popupwindow_photo"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/btn_photos_complete"
                android:textColor="#585858"
                android:textSize="18sp"
                android:text="@string/select_photos" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f3f3f3" />
        <Button
            android:id="@+id/btn_photos_popupwindow_cancel"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/btn_photos_complete"
            android:textColor="#585858"
            android:textSize="18sp"
            android:text="@string/cancel" />
    </LinearLayout>

</RelativeLayout>