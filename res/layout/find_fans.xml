<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg">
    <RelativeLayout 
	    android:layout_width="match_parent"
		android:layout_height="@dimen/actionbar_height"
		android:background="@drawable/actionbar_bg">
		<Button 
		    android:id="@+id/btn_back_find_fans"
		    style="@style/bar_back"/>
		<TextView 
	    	android:text="@string/find_fans"
	    	style="@style/bar_text"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    <cn.ifanmi.findme.ui.view.ptor.PullToRefreshListView 
	        android:id="@+id/plist_find_fans"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"/>
	    <TextView 
            android:id="@+id/txt_find_fans_no_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="@string/find_fans_no_info"
            android:textColor="@color/no_info"
            android:textSize="18sp"
            android:drawableTop="@drawable/img_no_info"
            android:visibility="gone"/>
	</RelativeLayout>
</LinearLayout>