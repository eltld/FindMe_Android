<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg">
    <RelativeLayout 
	    android:layout_width="match_parent"
		android:layout_height="@dimen/actionbar_height"
		android:background="@drawable/actionbar_bg">
		<Button 
		    android:id="@+id/btn_back_add_album"
		    style="@style/bar_back"/>
		<TextView 
	    	android:text="@string/add_album"
	    	style="@style/bar_text"/>
		<Button 
		    android:id="@+id/btn_ok_add_album"
		    style="@style/bar_right_complete"/>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
	    <include layout="@layout/write_status_photos"/>
	</LinearLayout>
</LinearLayout>
