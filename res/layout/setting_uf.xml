<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg">
    <RelativeLayout 
	    android:layout_width="match_parent"
		android:layout_height="@dimen/actionbar_height"
		android:background="@drawable/actionbar_bg">
		<Button 
		    android:id="@+id/btn_back_setting_uf"
		    style="@style/bar_back"/>
		<TextView 
	    	android:text="@string/setting_uf"
	    	style="@style/bar_text"/>
		<Button 
		    android:id="@+id/btn_ok_setting_uf"
		    style="@style/bar_right_complete"/>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
	    <EditText 
            android:id="@+id/edit_setting_uf"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_margin="10dp"
	    	android:padding="10dp"
	    	android:background="@drawable/edit_gray_47"
	    	android:hint="@string/user_feedback"
	    	android:textColorHint="@color/gray"
	    	android:textSize="16sp"
	    	android:textColor="@color/black"
	    	android:maxLength="50"
	    	android:maxLines="3"/>
	</LinearLayout>
</LinearLayout>
