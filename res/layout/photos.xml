<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg">
    <RelativeLayout 
	    android:layout_width="match_parent"
		android:layout_height="@dimen/actionbar_height"
		android:background="@drawable/actionbar_bg">
		<Button 
		    android:id="@+id/btn_back_photos"
		    style="@style/bar_back"/>
		<TextView 
	    	android:id="@+id/txt_photos_bar"
	    	style="@style/bar_text"/>
		<Button 
		    android:id="@+id/btn_ok_photos"
		    android:text="@string/complete"
		    style="@style/bar_right_text_full"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/layout_bg_s">
	    <GridView
            android:id="@+id/grid_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="8dp"
            android:horizontalSpacing="8dp"/>
	</RelativeLayout>
</LinearLayout>
