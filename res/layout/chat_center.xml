<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/pb_chat_center"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
    <ListView
        android:id="@+id/list_chat_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pb_chat_center"
        android:cacheColorHint="@color/transparent"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:listSelector="@drawable/no_selector"
        android:scrollbarStyle="outsideOverlay"
        android:transcriptMode="normal"/>
    <RelativeLayout
        android:id="@+id/layout_chat_center_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/chat_center_recording_bg"
        android:padding="10dp"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/img_chat_center_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/record_animate_01"
            android:contentDescription="@string/hello_world"/>
        <TextView
            android:id="@+id/txt_chat_center_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_chat_center_recording"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:text="@string/move_up_to_cancel"
            android:textSize="12sp"/>
    </RelativeLayout>
</RelativeLayout>
